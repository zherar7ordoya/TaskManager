@model TaskManager.Models.Task

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h1 class="h3 mb-0">Create Task</h1>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter task description"></textarea>
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" asp-for="IsCompleted" class="form-check-input" id="IsCompleted" />
                    <label asp-for="IsCompleted" class="form-check-label">Completed</label>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">Create</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to Index</a>
                </div>
            </form>
        </div>
    </div>
</div>
