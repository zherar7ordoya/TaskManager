@model IEnumerable<TaskManager.Models.Task>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Task List</h1>
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New Task</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@Html.ActionLink(task.Title, "Detail", new { id = task.Id })</td>
                        <td>@task.Description</td>
                        <td>
                            @if (task.IsCompleted)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pending</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("Delete", new { id = task.Id })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
